<h1>Listing cards</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Site</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.company %></td>
    <td><%= card.description %></td>
    <td><%= card.image_url %></td>
    <td><%= card.site %></td>
    <td><%= card.phone %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

